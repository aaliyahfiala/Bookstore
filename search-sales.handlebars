<form id="searchsales" action="/sales/search/" method="get">
    	Search Sales for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="BName">Bookstore</option>
                    <option name=Attribute value="CName">Customer</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Sales</h1>

<div align="center">
    <a href="/sales">Reset Page</a>
</div>

<table border=1px >
    <thead> 
        <th>Sale #:</th>
	    <th>Bookstore</th> 
        <th>Customer</th> 
        <th>Sale Price</th>
	    <th>Date of Sale</th>  
    </thead> 
    <tbody> 

	{{#each sales}} 
        <tr> 
            <td>{{id}}</td> 
            <td>{{Bookstore_Name}}</td> 
            <td>{{Customer_Name}}</td> 
	        <td>${{Sale_Price}}</td>
	        <td>{{Sale_Date}}</td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>