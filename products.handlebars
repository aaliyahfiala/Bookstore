	</tr>

	{{#each products}} 
        <tr> 
            <td>{{Name}}</td> 
            <td>{{Category}}</td> 
            <td>{{Author}}</td>
            <td>{{Condition}}</td>
            <td>{{Price}}</td>
            <td><a id="Modify" href="/products/{{id}}">Update</a><button id="Remove" onclick="deleteProduct({{id}})">Delete</button></td>
        </tr> 
    {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Product</h3>

    <form id="addproduct" action="/products" method="post">
    	Name: <input type="text" name="Name" required><br>
    	
        <label>Category:</label>
                <select name = "Category" required>
                    <option name = Category value = "Novel">Novel</option>
                    <option name = Category value = "Short Story">Short Story</option>
                    <option name = Category value = "Book on CD/Tape">Book on CD/Tape</option>
                    <option name = Category value = "DVD">DVD</option>
                    <option name = Category value = "Magazine">Magazine</option>
                    <option name = Category value = "Picture Book">Picture Book</option>
                    <option name = Category value = "Other">Other</option>
                </select><br>
        
    	Author: <input type="text" name="Author" required><br>
    	
        Condition:
        <input type="radio" name="Condition" value="New" checked>New
        <input type="radio" name="Condition" value="Used">Used<br>
    	
        Price: <input type="number" name="Price" min="0" step=".01" required><br> 

    	<button type="submit" value="Submit">Add Product</button>
    </form>

