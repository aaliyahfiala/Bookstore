<form id="searchproducts_bookstores" action="/products_bookstores/search/" method="get">
    	Search Product:Bookstore Relationship for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="pName">Product</option>
                    <option name=Attribute value="bName">Bookstore</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Product:Bookstore Relationships</h1>

<table border=1px >
    <thead> 
        <th>Product</th>
	    <th>Bookstore</th> 
	    <th>Edit</th>  
    </thead> 
    <tbody> 
        <tr>
        <td nowrap>sort by:<br><button onclick="window.location.href='/products_bookstores/sort/1'">Asc</button><button onclick="window.location.href='/products_bookstores/sort/2'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/products_bookstores/sort/3'">Asc</button><button onclick="window.location.href='/products_bookstores/sort/4'">Desc</button></td>
	</tr>

	{{#each products_bookstores}} 
        <tr> 
            <td>{{pName}}</td> 
            <td>{{bName}}</td> 
            <td><button id="Remove" onclick="deleteProduct_Bookstore({{pid}},{{bid}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Relationship</h3>

    <form id="addproduct_bookstore" action="/products_bookstores" method="post">
    	<label>Product:</label>
            <select name="p_id" required>
                {{#each products}}
                <option name="p_id" value="{{id}}">{{Name}}</option>
                {{/each}}
            </select><br>
    	<label>Bookstore:</label>
            <select name="b_id" required>
                {{#each bookstores}}
                <option name="b_id" value="{{id}}">{{Name}}</option>
                {{/each}}
            </select><br>
    	
    	<button type="submit" value="Submit">Add Relationship</button>
    </form>

