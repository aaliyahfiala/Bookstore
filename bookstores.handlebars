<form id="searchbookstores" action="/bookstores/search" method="get">
    	Search Bookstores for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="Name">Name</option>
                    <option name=Attribute value="Location">Location</option>
                    <option name=Attribute value="Type">Type</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Bookstores</h1>

<table border=1px >
    <thead> 
	    <th>Name</th> 
        <th>Location</th> 
        <th>Type</th>
	    <th>Edit</th>  
    </thead> 
    <tbody> 
        <tr>
		<td nowrap>sort by:<br><button onclick="window.location.href='/bookstores/sort/3'">Asc</button><button onclick="window.location.href='/bookstores/sort/4'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/bookstores/sort/5'">Asc</button><button onclick="window.location.href='/bookstores/sort/6'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/bookstores/sort/7'">Asc</button><button onclick="window.location.href='/bookstores/sort/8'">Desc</button></td>
	</tr>

	{{#each bookstores}} 
        <tr>  
            <td>{{Name}}</td> 
            <td>{{Location}}</td> 
            <td>{{Type}}</td>
            <td><a id="Modify" href="/bookstores/{{id}}">Update</a><button id="Remove" onclick="deleteBookstore({{id}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Bookstore</h3>

    <form id="addbookstore" action="/bookstores" method="post">
    	Name: <input type="text" name="Name" required><br>
    	Location: <input type="text" name="Location" required><br>
    	Type:
        <input type="radio" name="Type" value="New" checked>New
        <input type="radio" name="Type" value="Used">Used
        <input type="radio" name="Type" value="Both">Both<br>
    	
    	<button type="submit" value="Submit">Add Bookstore</button>
    </form> 
