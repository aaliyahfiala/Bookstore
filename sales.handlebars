<form id="searchsales" action="/sales/search/" method="get">
    	Search Sales for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="BName">Bookstore</option>
                    <option name=Attribute value="CName">Customer</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Sales</h1>

<table border=1px >
    <thead> 
        <th>Sale #:</th>
	    <th>Bookstore</th> 
        <th>Customer</th> 
        <th>Sale Price</th>
	    <th>Date of Sale</th>
	    <th>Edit</th>  
    </thead> 
    <tbody> 
        <tr>
		<td nowrap>sort by:<br><button onclick="window.location.href='/sales/sort/1'">Asc</button><button onclick="window.location.href='/sales/sort/2'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/sales/sort/3'">Asc</button><button onclick="window.location.href='/sales/sort/4'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/sales/sort/5'">Asc</button><button onclick="window.location.href='/sales/sort/6'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/sales/sort/7'">Asc</button><button onclick="window.location.href='/sales/sort/8'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/sales/sort/9'">Asc</button><button onclick="window.location.href='/sales/sort/10'">Desc</button></td>
	</tr>

	{{#each sales}} 
        <tr> 
            <td>{{id}}</td> 
            <td>{{Bookstore_Name}}</td> 
            <td>{{Customer_Name}}</td> 
	        <td>${{Sale_Price}}</td>
	        <td>{{Sale_Date}}</td>
            <td><button id="Remove" onclick="deleteSale({{id}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Sale</h3>

    <form id="addsale" action="/sales" method="post">
        <label>Bookstore:</label>
            <select name="b_id" required>
                {{#each bookstores}}
                    <option value="{{id}}">{{Name}}</option>
                {{/each}}
            </select><br>
        <label>Customer:</label>
            <select name="c_id" required>
                {{#each customers}}
                <option value="{{id}}">{{Name}}</option>
                {{/each}}
            </select><br>
        
    	Sale Price: <input type="number" name="Sale_Price" min=0 step=".01" required><br>
    	Date of Sale: <input type="date" name="Sale_Date" required><br> 

    	<button type="submit" value="Submit">Add Sale</button>
    </form>

