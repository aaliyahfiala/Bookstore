<form id="searchproducts_sales" action="/products_sales/search/" method="get">
    	Search Product:Sale Relationship for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="pName">Product</option>
                    <option name=Attribute value="sid">Sale #</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Product:Sale Relationships</h1>

<table border=1px >
    <thead> 
        <th>Product</th>
	    <th>Sale #</th> 
	    <th>Edit</th>  
    </thead> 
    <tbody> 
        <tr>
        <td nowrap>sort by:<br><button onclick="window.location.href='/products_sales/sort/1'">Asc</button><button onclick="window.location.href='/products_sales/sort/2'">Desc</button></td>
		<td nowrap>sort by:<br><button onclick="window.location.href='/products_sales/sort/3'">Asc</button><button onclick="window.location.href='/products_sales/sort/4'">Desc</button></td>
	</tr>

	{{#each products_sales}} 
        <tr> 
            <td>{{pName}}</td> 
            <td>{{sid}}</td> 
            <td><button id="Remove" onclick="deleteProduct_Sale({{pid}},{{sid}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Relationship</h3>

    <form id="addproduct_sale" action="/products_sales" method="post">
    	<label>Product:</label>
            <select name="p_id" required>
                {{#each products}}
                <option name="p_id" value="{{id}}">{{Name}}</option>
                {{/each}}
            </select><br>
    	<label>Sale:</label>
            <select name="s_id" required>
                {{#each sales}}
                <option name="s_id">{{id}}</option>
                {{/each}}
            </select><br>
    	
    	<button type="submit" value="Submit">Add Relationship</button>
    </form>

