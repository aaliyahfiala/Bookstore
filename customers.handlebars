<form id="searchcustomers" action="/customers/search/" method="get">
    	Search Customers for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name="Attribute" value="Name">Name</option>
                    <option name="Attribute" value="Address">Address</option>
                </select><br>=
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Customers</h1>

<table border=1px >
    <thead> 
	   <th>Name</th> 
	   <th>Address</th>
       <th>Phone</th>
       <th>Edit</th>  
    </thead> 
    <tbody> 
        <tr>
		  <td nowrap>sort by:<br><button onclick="window.location.href='/customers/sort/3'">Asc</button><button onclick="window.location.href='/customers/sort/4'">Desc</button></td>
          <td nowrap>sort by:<br><button onclick="window.location.href='/customers/sort/5'">Asc</button><button onclick="window.location.href='/customers/sort/6'">Desc</button></td>
		  <td nowrap>sort by:<br><button onclick="window.location.href='/customers/sort/7'">Asc</button><button onclick="window.location.href='/customers/sort/8'">Desc</button></td>
	    </tr>

	{{#each customers}} 
        <tr>  
            <td>{{Name}}</td>
            <td>{{Address}}</td>
            <td>{{Phone}}</td>
            
            <td><a id="Modify" href="/customers/{{id}}">Update</a><button id="Remove" onclick="deleteCustomer({{id}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>

    <br>
	<h3>Add New Customer</h3>

    <form id="addcustomer" action="/customers" method="post">
    	Name: <input type="text" name="Name"><br>
        Address: <input type="text" name="Address"><br>
        Phone "xxx-xxx-xxxx": <input type="text" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="Phone"><br>

    	<button type="submit" value="Submit">Add Customer</button>
    </form> 
