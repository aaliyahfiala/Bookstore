<h1>Update "{{products.Name}}":</h1>
<form id="update-product" action="/products" method="post">
    Name: <input type="text" name="Name" value="{{products.Name}}"><br>
    Category: <input type="text" name="Category" value="{{products.Category}}"><br>
    Author: <input type="text" name="Author" value="{{products.Author}}"><br>

    Quantity: <input type="text" name="Quantity" value="{{products.Quantity}}"><br>

    Condition: <input type="text" name="Condition" value="{{products.Condition}}"><br>

    Price: <input type="text" name="Price" value="{{products.Price}}"><br>

<button onclick="updateProduct({{products.id}})">Update</button>
</form>
