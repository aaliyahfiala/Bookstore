<form id="searchbookstores" action="/bookstores/search" method="get">
    	Search Bookstores for:<br>
        <label>Attribute:</label>
                <select name="Attribute" required>
                    <option name=Attribute value="Name">Name</option>
                    <option name=Attribute value="Location">Location</option>
                    <option name=Attribute value="Type">Type</option>
                </select><br>= 
        
    	Value: <input type="text" name="searchFor" required> 

    	<button type="submit" value="Submit">Search</button>
</form>

<h1>Bookstores</h1>

<div align="center">
    <a href="/bookstores">Reset Page</a>
</div>

<table border=1px >
    <thead> 
	    <th>Name</th> 
        <th>Location</th> 
        <th>Type</th>
    </thead> 
    <tbody> 

	{{#each bookstores}} 
        <tr> 
            <td>{{Name}}</td> 
            <td>{{Location}}</td> 
            <td>{{Type}}</td>
        </tr> 
        {{/each}} 
    </tbody> 
    </table>
